---
import Layout from "../layouts/root-layout.astro";
---

<Layout title="Sobre Nosotros">
  <div class="navbar w-full border-b bg-base-100">
    <div class="navbar-start">
      <a type="button" class="btn btn-ghost" href="/" title="Redes">
        <img class="h-8 w-8" src="/logo.svg" alt="Redes" />
      </a>
    </div>
    <div class="navbar-end">
      <a class="btn" href="/">Inicio</a>
    </div>
  </div>

  <main class="px-5">
    <div class="mx-8 flex min-h-[calc(100vh-4rem)] items-center justify-center">
      <div class="flex flex-col items-center">
        <h1 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-500 via-green-500 to-purple-500 animate-gradient-x">
          Nuestro Equipo
        </h1>
        <div class="mt-16 grid grid-cols-2 grid-rows-2 gap-8">

          <div
            class="flex w-64 flex-col items-center justify-center gap-4 rounded-badge border p-5"
          >
             <a href="https://www.linkedin.com/in/santanamay-jonatanjafet" class="avatar">
      
              <div class="ring-red-500 ring-offset-base-100 w-24 rounded-full ring ring-offset-2">
                <img src="https://i.postimg.cc/PfSWRTB1/450939172-2844620709027679-4011678557429900096-n-1.jpg" />
              </div>
            </a>
            <span class="text-center">Jonatan Jafet Santana May</span>

          </div>


          <div
            class="flex w-64 flex-col items-center justify-center gap-4 rounded-badge border p-4"
          >
            <div class="avatar">
              <div class="ring-primary ring-offset-base-100 w-24 rounded-full ring ring-offset-2">
                <a href="https://www.linkedin.com/in/emiliano-valencia/">
                  <img src="https://i.postimg.cc/W1tV6bVQ/Emiliano-sonriendo-No-logo.png" />
                </a>
              </div>
            </div>
            <span class="text-center">Emiliano Valencia Guzmán</span>
          </div>


          <div
            class="flex w-64 flex-col items-center justify-center gap-4 rounded-badge border p-4"
          >
          
            <div class="avatar">
              <div class="ring-primary ring-offset-base-100 w-24 rounded-full ring ring-offset-2">
                <a href="https://www.linkedin.com/in/fredy-manzanero/">
                  <img src="https://avatars.githubusercontent.com/u/72423402?s=400&u=ddc7b2a2c7a85618df8a5bd317b8c3be2f69dea9&v=4" />
                </a>
              </div>
            </div>
            <span class="text-center"
              >Fredy Abisai Manzanero Herrera</span
            >
          </div>


          <div
            class="flex w-64 flex-col items-center justify-center gap-4 rounded-badge border p-4"
          >
            <a href="https://www.linkedin.com/in/jahirgomez" class="avatar">
              <div class="ring-primary ring-offset-base-100 w-24 rounded-full ring ring-offset-2">
                <img src="https://i.postimg.cc/5trffxRB/Horacio-Jahir-Gomez-Gomez.jpg" />
              </div>
            </a>
            <span class="text-center">Horacio Jahir Gómez Gómez</span>
          </div>

        </div>
      </div>
    </div>
  </main>
</Layout>
